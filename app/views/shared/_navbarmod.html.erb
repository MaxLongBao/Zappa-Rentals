  <div class="navbar-wagon">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "frank_logo2.jpg", class: "logo" %>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <% if user_signed_in? %>

        <!-- Links when logged in -->
        <div class="navbar-buttons">
          <%= link_to "Profile", "#", class: "navbar-wagon-item navbar-wagon-link buttons-margin" %>
          <%= link_to "Settings", "#", class: "navbar-wagon-item navbar-wagon-link buttons-margin" %>
          <%= link_to destroy_user_session_path, method: :delete, class: "buttons-margin" do %>
            <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </div>

      <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
  </div>
</div>
